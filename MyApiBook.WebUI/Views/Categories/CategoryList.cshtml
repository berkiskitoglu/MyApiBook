@model List<MyApiBook.WebUI.Dtos.ResultCategoryDto>
@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Kategori Paneli</h3>
</div>

<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th>#</th>
                <th>Kategori Ad</th>
                <th>Kategori Sil</th>
                <th>Kategori Güncelle</th>
         
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">
                        
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.CategoryID</span>
                            </div>
                        </div>
                    </th>

                    <th scope="row">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.CategoryName</span>
                            </div>
                        </div>
                    </th>
                   
                    <th scope="row">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <a href="/Categories/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger">Sil</a>
                            </div>
                        </div>
                    </th>
                    <th scope="row">
                        <div class="media align-items-center">

                            <div class="media-body">
                                <a href="/Categories/UpdateCategory/@item.CategoryID" class="btn btn-outline-warning">Güncelle</a>
                            </div>
                        </div>
                    </th>

                </tr>
            }
          

        </tbody>
       
    </table>
    <a href="/Categories/CreateCategory" class="btn btn-outline-success" style="margin:10px">Yeni Kategori Girişi</a>
</div> 

