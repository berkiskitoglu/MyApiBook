 @model List<MyApiBook.WebUI.Dtos.ResultCategoryWithBookAndAuthor>

<div id="Teknoloji" data-tab-content>
	<div class="row">
		@foreach (var item in Model)
		{
			<div class="col-md-3">
				<div class="product-item">
					<figure class="product-style">
						<img src="@item.ImageUrl" alt="Books" class="product-item" style="width: 100%; height: 300px;">
						<button type="button" class="add-to-cart" data-product-tile="add-to-cart">
							Sepete Ekle
						</button>
					</figure>
					<figcaption>
						<h3>@item.Name</h3>
						<span>@item.AuthorName @item.AuthorSurname</span>
					<div class="item-price">$@item.OrginalPrice</div>
					</figcaption>
				</div>
			</div>
		}
	

		
	</div>
</div>